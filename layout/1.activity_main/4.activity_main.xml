<TextView
                android:fontFamily="@font/button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text=" Generate professional resumes and CVs that highlight your skills and experience"
                android:textColor="@color/black"
                android:textSize="10dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:src="@drawable/right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/assignment"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:weightSum="6"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:src="@drawable/assignment"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">
            <TextView
                android:fontFamily="@font/button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_marginTop="10dp"
                android:text="Assignment Writer"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="23dp"/>

            <TextView
                android:fontFamily="@font/button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Create well-researched and structured academic assignments on various topics"
                android:textColor="@color/black"
                android:textSize="10dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:src="@drawable/right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:weightSum="6"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:src="@drawable/biography"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">
            <TextView
                android:fontFamily="@font/button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_marginTop="10dp"
                android:text="History Writer"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="23dp"/>
